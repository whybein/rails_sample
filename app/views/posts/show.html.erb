<div class="card mb-3">
  <div class="card-header">
    <h3><%= @post.title %></h3>
  </div>
  <div class="card-body">
    <%= @post.content %>
  </div>
  <div class="card-footer">
    작성자 : <%= @post.user&.email %>
  </div>
</div>


<% if current_user %>
  <%= render "comments/form", comment: Comment.new, post: @post, user: current_user %>
<% end %>
<hr>

<%= render 'comments/comments', comments: @post.comments.order(created_at: :desc) %>
<hr>
<%= link_to "뒤로가기", posts_path %>
