<div class="list-group">
  <div class="list-group-item list-group-item-action active">
    <div class="row px-3 justify-content-between">
      <h3 class="text-white ">모든 게시글 보기</h3>
      <% if current_user %>
        <%= link_to '새 글 쓰기', new_post_path, class: "btn bg-white" %>
      <% end %>
    </div>
  </div>

  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div class="list-group-item">
        <div class="row">
          <div class="col-md-2"><%= post.user_id&.email %></div>
          <div class="col-md-2">
            <%=link_to post_path(post) do%>
              <%= post.title %>
            <%end%>
          </div>
          <div class="col-md-5">
            <%= link_to post_path(post) do %>
              <%= truncate post.content %>
            <% end %>
          </div>
          <div class="col-md-3 text-right">
            <% if current_user == post.user_id %>
              <%= link_to "수정", edit_post_path(post), class: "btn btn-info btn-sm text-white" %>
              <%= link_to "삭제", post_path(post), class: "btn btn-danger btn-sm text-white", method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="list-group-item list-group-item-action">
      <h3>게시글이 없습니다.</h3>
    </div>
  <% end %>
</div>





