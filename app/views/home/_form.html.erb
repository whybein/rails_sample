<%=form_for(@post) do |f|%>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%=f.label :title, '제목'%>
        <%=f.text_field :title, class: "form-control"%>
      </div>
      <div class="form-group">
        <%=f.label :content, '내용'%>
        <%=f.text_area :content, class: "form-control"%>
      </div>
      <hr class="mt-5">
      <ul>
        <%=f.fields_for :hashtags do |h| %>
          <li>
          <%= h.label :title, '해시태그' %>
          <%= h.text_field :title%>
          </li>
        <% end %>
      </ul>
      <hr class="mt-5">
      <%= f.file_field :image_url %>
      <%= f.submit '작성', class: "float-right"%>
    </div>
  </div>
<% end %>
